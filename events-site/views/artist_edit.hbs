<h2>Add Artist</h2>
<form method="POST" action="" class="form-horizontal">
  <p>Fields marked with * are required</p>

  <div class="form-group">
    <label for="artist_name" class="control-label col-xs-2">
      <span>*Name: </span>
    </label>
    <div class="col-xs-6">
      <input type="text" class="form-control" id="artist_name" name="artist_name" required>
    </div>
  </div>

  <div class="form-group">
    <label for="full_name" class="control-label col-xs-2">
      <span>Full Name: </span>
    </label>
    <div class="col-xs-6">
      <input type="text" class="form-control"  id="full_name" name="full_name">
    </div>
  </div>

  <div class="form-group">
    <label for="active" class="control-label col-xs-2">
    <span>*Active: </span>
    </label> 
    <div class="col-xs-1">
      <input type="checkbox" class="form-control"  id="active" name="active" checked required>
    </div>
  </div>

  <div class="form-group">
    <label for="bio" class="control-label col-xs-2">
    <span>Bio: </bio>
    </label>
    <div class="col-xs-6">
      <textarea id="bio" class="form-control" name="bio"></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-offset-2 col-xs-10">
      <input type="submit" value="Add Artist" class="btn btn-primary">
    </div>
  </div>

</form>
