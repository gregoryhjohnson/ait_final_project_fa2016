<h2>{{artist.name}}</h2>
<p>{{artist.bio}}</p>
<div class="hidden" id="artistID">{{artist._id}}</div>
{{#if userFollowing}}
  <button class="btn btn-primary" id="followBtn" onClick="handleFollowBtnClick()" value="unfollow">Unfollow</button>
{{else}}
  <button class="btn btn-primary" id="followBtn" onClick="handleFollowBtnClick()" value="follow">Follow</button>
{{/if}}

<h3>Upcoming Events</h3>
<div class="list-group">
{{#each events}}
  <div class="list-group-item clearfix">
    <span>
      {{this.__t}}
      <br>{{formatDate this.date "dddd, MMMM DD, YYYY"}}
    {{#if this.locationName}}
      {{this.locationName}}, {{this.locationCity}}
      {{#if this.locationState}}
      , {{this.locationState}}
      {{/if}}
      , {{this.locationCountry}}
      
    {{/if}}
    </span>
    <span class="clearfix pull-right">
      <a href='/artist/{{this.artist.slug}}/event/{{this._id}}' class="btn btn-primary">Details</a>
    </span>
  </div>
{{/each}}
</div>
<a href='/artist/{{artist.slug}}/add_event' class="btn btn-primary">Add Event</a>
