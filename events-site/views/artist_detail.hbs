<h2>{{artist.name}}</h2>
<p>{{artist.bio}}</p>
<div class="hidden" id="artistID">{{artist._id}}</div>
{{#if userFollowing}}
  <button id="followBtn" onClick="handleFollowBtnClick()" value="unfollow">Unfollow</button>
{{else}}
  <button id="followBtn" onClick="handleFollowBtnClick()" value="follow">Follow</button>
{{/if}}

<h3>Upcoming Events</h3>
{{#each events}}
  <div class="event_listing">
    <p>{{this.__t}}</p>
    <p>{{this.date}}</p>
    <a href='/artist/{{../artist.slug}}/event/{{this._id}}'>Details</a>
  </div>
{{/each}}
<a href='/artist/{{artist.slug}}/add_event'>Add Event</a>
